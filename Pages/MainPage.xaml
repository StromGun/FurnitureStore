<Page x:Class="FurnitureStore.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnOrderList" Content="Orders" Click="BtnOrderList_Click"/>
            <Button x:Name="BtnProductList" Content="Products" Click="BtnProductList_Click"/>
            <Button x:Name="BtnSellerList" Content="Sellers" Click="BtnSellerList_Click"/>
            <Button x:Name="BtnCheckList" Content="Checks" Click="BtnCheckList_Click"/>
        </StackPanel>
    </Grid>
</Page>
