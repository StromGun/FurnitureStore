<Page x:Class="FurnitureStore.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Login" Style="{StaticResource TblockMain}"/>
                <TextBox Name="TboxLogin" Style="{StaticResource TboxMain}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Password" Style="{StaticResource TblockMain}"/>
                <PasswordBox Name="PboxPassword" Style="{StaticResource PboxMain}"/>
            </StackPanel>
            
            <Button Content="Login" Name="BtnLogin" Click="BtnLogin_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
